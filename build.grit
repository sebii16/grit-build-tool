FILES = "src/main.zig"
OUT = "grit"
DEBUG_FLAGS = "-O Debug -freference-trace=10"
RELEASE_FLAGS = "-O ReleaseFast -fstrip"

clean {
  "rm -f $OUT"
}

@default
debug {
  "zig build-exe $FILES -femit-bin=$OUT $DEBUG_FLAGS"
}

release {
  "zig build-exe $FILES -femit-bin=$OUT $RELEASE_FLAGS"
}

error {
 "$FOO"
}
